{
  "root": true,
  "extends": [
    "eslint:recommended",
    "react-app"
  ],
  "plugins": [
    "unused-imports"
  ],
  "globals": {
    "DEV": false,
    "MOCK_GRAPHQL__": false,
    "drupalSettings": false,
    "xdescribe": false,
    "xit": false
  },
  "rules": {
    "no-mixed-operators": 0,
    "import/first": 0,
    "prefer-promise-reject-errors": 0,
    "react/prop-types": 0,
    "react/jsx-no-bind": 0,
    "comma-dangle": ["error", "never"],
    "jsx-quotes": ["error", "prefer-double"],
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": "off",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
